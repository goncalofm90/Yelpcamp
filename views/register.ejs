<%- include("partials/header") %>
<div class="row">
    <div class="col-md-12">
       <form class="form-signin" action="/register" method="POST">
  			<h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
  			<label for="inputUsername" class="sr-only">Username (required)</label>
 			<input type="text" id="inputUsername" class="form-control" name="username"												placeholder="Username" required autofocus>
 			<label for="inputPassword" class="sr-only">Password (required)</label>
  			<input type="password" id="inputPassword" class="form-control" name="password" 											placeholder="Password" required>
		    <label for="inputEmail" class="sr-only">E-mail</label>
 			<input type="email" id="inputEmail" class="form-control" name="email"												placeholder="e-mail" autofocus required>
			 <label for="inputEmail" class="sr-only">Avatar (optional)</label>
 			<input type="text" id="inputAvatar" class="form-control" name="avatar"												placeholder="image url" autofocus required>
		   <label for="inputEmail" class="sr-only">Admin Code(only if admin)</label>
 			<input type="text" id="inputAdminCode" class="form-control" name="adminCode"										placeholder="Admin Code" autofocus>
		   <div id = "signup-button">
			  <button class="btn btn-lg btn-outline-info btn-block" type="submit">Sign up</button> 
		   </div>
  			
  				
		</form>	
		<div id = "signuplink" class ="form-signin">
       		 <a href="/campgrounds">Go Back</a>
    	</div>
	</div>
</div>
<%- include("partials/footer") %>
